@model BuildingFilterViewModel

<div class="row">
    <form asp-controller="Admin" asp-action="">
        <div class="form-inline">
            <div class="form-group" style="margin:20px">
                <label> Budowa:</label>
                @if (ViewBag.BuildingList != null)
                {
                    <select asp-for="Building.Id" style="width:300px; margin:0 0 0 10px"
                            asp-items="@(new SelectList(ViewBag.BuildingList, "Id", "Name"))">
                        <option>Wybierz</option>
                    </select>
                }
                else
                {
                    <a> Nie wprowadzono jeszcze żadnych budów do bazy danych</a>
                }
                <label> Użytkownik:</label>
                @if (ViewBag.UserList != null)
                {
                    <select asp-for="UserId" style="width:300px; margin:0 0 0 10px"
                            asp-items="@(new SelectList(ViewBag.UserList, "Id", "FullName"))">
                        <option>Wybierz</option>
                    </select>
                }
                else
                {
                    <a> Nie wprowadzono jeszcze żadnych budów do bazy danych</a>
                }
            </div>
            <div class="form-group" style="margin: 0 0 0 10px">
                <label style="margin:0 20px"> Data od:</label>
                <input asp-for="DateFrom" type="text" class="form-control" style="width:130px"
                       value="yyyy-MM-dd" />
            </div>
            <div class="form-group" style="margin: 0 0 0 10px">
                <label style="margin:0 20px"> Data do:</label>
                <input asp-for="DateTo" type="text" class="form-control" style="width:130px"
                       value="yyyy-MM-dd" />
            </div>
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Filtruj" style="margin:0 0 0 20px" />
            </div>
        </div>
    </form>
</div>
